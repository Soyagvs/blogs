---
interface Props {
  title: string;
  date: string;
  img: string;
}
const { title, date, img } = Astro.props;
---

<div class="flex-col justify-center items-center">
  <div class="border border-black bg-white max-w-5xl h-[500px] mt-20 rounded-xl mx-auto">
    <img src={img} alt="" />
  </div>
    <div class="flex flex-col justify-center items-center">
      <h2 class="mt-5 text-white font-semibold text-4xl">{title}</h2>
      <h3 class="text-[#D9D9D9] font-thin">{date}</h3>
    </div>
</div>
